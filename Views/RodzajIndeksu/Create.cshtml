@model Producent.Models.RodzajIndeksu

@{
    ViewBag.Title = "Create";
}

<h2>Nowy rodzaj indeksu</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <table class="lista">
        <tr>
            <th class="naglowek-listy">
                Pole
            </th>
            <th class="naglowek-listy">
                Wartość
            </th>
        </tr>

        <tr>
            <td>
                Kod
            </td>
            <td>
                @Html.EditorFor(model => model.Kod, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kod, "", new { @class = "text-danger" })

            </td>
        </tr>

        <tr>
            <td>
                Nazwa
            </td>
            <td>
                @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })

            </td>
        </tr>
        

    </table>
    <p>
        <input type="submit" value="Utwórz" />
    </p>
    
    }

<p>
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "link_zwykly" })
</p>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
